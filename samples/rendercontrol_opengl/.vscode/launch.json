    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.build/rendercontrol_openglexample.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH};${workspaceFolder}\\.pixi\\envs\\build\\Library\\bin"
                },
                {
                    "name": "QT_QPA_PLATFORM_PLUGIN_PATH",
                    "value": "${workspaceFolder}\\.pixi\\envs\\default\\Library\\lib\\qt6\\plugins\\platforms",
                }
            ],
            "console": "integratedTerminal"
        }
    ]
}